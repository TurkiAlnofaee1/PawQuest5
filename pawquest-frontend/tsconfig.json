{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "esModuleInterop": true,
    "baseUrl": ".",
    "lib": [
      "es2015",
      "dom"
    ],
    "moduleResolution": "node",
    "types": ["jest"],
    "typeRoots": ["./@types", "./node_modules/@types"],
    "paths": {
      "@testing-library/react-native": ["./node_modules/@testing-library/react-native"],
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "extends": "expo/tsconfig.base"
}
